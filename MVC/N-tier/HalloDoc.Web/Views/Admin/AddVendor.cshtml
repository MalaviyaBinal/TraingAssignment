@model HalloDocWebEntity.ViewModel.SendOrderModel
@{
    Layout = "_AdminHeader";
}

<div class="container ">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">Add Business</h4>

                <a class="text-start text-info text-decoration-none " href="javascript:void(0);" onclick="history.go(-1);">
                    <button class="btn btn-white  text-info border-info rounded ">
                        <i class="fa-solid  fa-less-than"></i> Back
                    </button>
                </a>
            </div>
            <form asp-action="AddVendor" asp-controller="Admin" method="post">
                <div class="container rounded bg-white shadow-lg py-4">
                    <div class="row">
                        <div class="col-12 h5 mb-3">
                            Submit Information
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.Vendorname id="businessContact" type="text" class="form-control" placeholder="Business Name">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Business Name</label>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <select class="form-select" id="ProfessionSelect" asp-for=@Model.SelectedProfession>
                                <option value="0">select</option>
                                @foreach (var item in Model.professions)
                                {
                                    <option value="@item.Healthprofessionalid">@item.Professionname</option>
                                }
                            </select>
                            <label for="ProfessionSelect" class="form-label ps-4">Select Profession</label>
                            @* <select class="form-select">
                                <option selected>Profession</option>
                            </select>
                            <label for="floatingSelect" class="form-label ps-4">Select Profession</label> *@
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.Faxnumber type="text" class="form-control" id="faxNumber" placeholder="Fax Number">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Fax Number</label>
                        </div>
                        <div class="col-12 col-lg-6 col-md-6 form-floating mb-3 text-muted ">
                            <input asp-for=@Model.businessDetail.Phonenumber type="tel" class="form-control" id="phone" placeholder="Enter Phone Number" style="height:58px" aria-label=".form-control-lg example">
                            <label for="phone" class="form-label ps-4">Enter Phone Number</label>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.Email type="email" class="form-control" id="email" placeholder="Email">
                            <label for="email" class="form-label ps-4">Email</label>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.Businesscontact id="businessContact" type="text" class="form-control" placeholder="Business contact">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Business contact</label>
                        </div>
                        <div class="col-12 col-lg-6 form-floating col-md-6 mb-3 text-muted">
                            <input asp-for="@Model.businessDetail.Address" id="street" type="text" class="form-control" placeholder="Business contact">
                            <label for="exampleFormControlInput1" class="form-label ps-4">
                                Street
                            </label>
                        </div>
                        <div class="col-12 col-lg-6 form-floating col-md-6 mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.City id="city" type="text" class="form-control" placeholder="Business contact">
                            <label for="exampleFormControlInput1" class="form-label ps-4">
                                City
                            </label>
                        </div>
                        <div class="col-12 col-lg-6 col-md-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.State id="state" type="text" class="form-control" placeholder="Business contact">
                            <label for="state" class="form-label ps-4">State</label>
                        </div>
                        <div class="col-12 col-lg-6 col-md-6 form-floating mb-3 text-muted">
                            <input asp-for=@Model.businessDetail.Zip class="form-control" id="zip" type="text" placeholder="Zip/Postal" />
                            <label for="zip" class="form-label ps-4">Zip/Postal</label>
                        </div>
                    </div>
                    <div class="text-end pb-3">
                        <button class="btn btn-info me-2 text-white" type="submit">Save</button>
                        <a class="btn btn-white text-info border-info" type="reset" asp-action="AdminDashboardPartners">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>