@model IEnumerable<HalloDocWebEntity.Data.Role>
@*@{
    Layout = "_AdminHeader";
}*@
<div class="container p-0">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">Account Access</h4>
            </div>
        </div>
    </div>
</div>
<div class="container hideonmobile bg-white rounded shadow mt-3 p-0">
    <div class="row pt-3 ps-2 pb-3">
        <div class="col text-end">
            <a asp-action="CreateRole" asp-controller="Admin">
                <button class="btn btn-white border-info text-info me-3">
                    Create Access
                </button>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr class="bg-light text-muted h-100">
                <th scope="col">Name</th>
                <th scope="col">Account Type</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody class="text-muted">
            <tR>
                @foreach(var item in Model)
                {
                    <td>@item.Name</td>
                    if(item.Accounttype == 1)
                    {
                        <td>Admin</td>
                    }
                    else if(item.Accounttype == 2)
                    {
                        <td>Physician</td>
                    } else if(item.Accounttype == 0)
                    {
                        <td>All</td>
                    }
                    <td>@item.Accounttype</td>
                }
                <td>
                    Role Name
                </td>
                <td>
                    Account Type
                </td>
                <td>
                    <a asp-action="EditPhysicianAccount" asp-controller="Admin"><button type="button" class="btn btn-outline-info">Edit</button></a>
                    <button type="button" class="btn btn-outline-info">Delete</button>
                </td>
            </tR>

        </tbody>
    </table>
</div>
<script>
</script>
