@model HalloDocWebEntity.ViewModel.AdminProfile
@{
    Layout = "_AdminHeader";
}
<style>
    .iti {
        width: 100%;
    }
    #phone, #phone1 {
        height: 58px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">Create Admin Account</h4>
            </div>
            <div class="container rounded bg-white shadow py-3">
                <h5 class="mb-3">Account Information</h5>
                <form asp-action="CreateAdminAccount" asp-controller="Admin" method="post">
                    <div class="row">
                        <div class="col-sm-12 col-md-4 col-xl-4 form-floating mb-3 text-muted">
                            <input asp-for=adminuser.Usarname type="text" class="form-control" id="adminUsername"  disabled>
                            <label for="exampleFormControlInput1" class="form-label ps-4">User Name</label>
                        </div>
                        <div class="col-sm-12 col-md-4 col-xl-4 form-floating mb-3 text-muted">
                            <input asp-for=Passwordhash type="text" class="form-control needs-validation" placeholder="Lastname">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Password </label>
                            <span asp-validation-for="Passwordhash" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-4 col-xl-4">
                            <div class="mb-3 border border-light rounded-5">
                                <select class="form-select text-muted p-3 pla1" asp-for=roleid aria-label=" form-select-lg example">
                                    <option selected value="0">Role</option>
                                    @foreach (var item in Model.roles)
                                    {
                                        <option value="@item.Roleid">
                                            @item.Name
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="roleid" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 h5 mb-3">
                            Administrator Information
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Firstname type="text" class="form-control needs-validation" id="adminFirstName " onchange="setUsername()" placeholder="Firstname">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Firstname</label>
                            <span asp-validation-for=Firstname class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Lastname type="text" class="form-control needs-validation" id="adminLastname" onchange="setUsername()" placeholder="Lastname">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Lastname</label>
                            <span asp-validation-for=Lastname class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Email type="email" class="form-control" id="email" placeholder="Email">
                            <label for="email" class="form-label ps-4">Email</label>
                            <span asp-validation-for=Email class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input type="email" asp-for=Con_Email class="form-control" id="exampleFormControlInput1" placeholder="Confirm Email">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Confirm Email</label>
                            <span asp-validation-for=Con_Email class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Mobile id="phone" class="form-control inp2" type="tel" placeholder="Phone Number">
                            <span asp-validation-for=Mobile class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 mb-3 text-muted">
                            @if (Model.regions != null)
                            {
                                @foreach (var item in Model.regions)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input checkboxes" type="checkbox" name="SelectedReg" value="@item.Regionid">
                                        <span class="form-check-label text6" for="inlineCheckbox1">@item.Name</span>
                                    </div>
                                }
                            }
                        </div>
                        <div class="col-12 h5 mb-3">
                            Mailing & Billing Information
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Address1 type="text" class="form-control" id="Address-1" placeholder="Address 1">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Address 1</label>
                            <span asp-validation-for=Address1 class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Address2 type="text" class="form-control" id="Address-2" placeholder="Address 2">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Address 2</label>
                            <span asp-validation-for=Address2 class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6  form-floating mb-3 text-muted">
                            <input asp-for=City type="text" class="form-control" id="city" placeholder="City">
                            <label for="exampleFormControlInput1" class="form-label ps-4">City</label>
                            <span asp-validation-for=City class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6  form-floating mb-3 text-muted">
                            <select class="form-select text-muted p-3 pla1" asp-for=regionid id="SearchByRegion">
                                <option selected value="0">State</option>
                                @foreach (var i in Model.regions)
                                {
                                    <option value="@i.Regionid">@i.Name</option>
                                }
                            </select>
                            <span asp-validation-for=regionid class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6  form-floating mb-3 text-muted">
                            <input asp-for=Zip type="text" class="form-control" id="zipcode" placeholder="Zip Code">
                            <label for="exampleFormControlInput1" class="form-label ps-4">Zip Code</label>
                            <span asp-validation-for=Zip class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for=Altphone id="phone1" class="form-control inp2" type="tel" placeholder="Alternate Phone Number">
                        </div>
                    </div>
                    <div class="text-end pb-3">
                        <button class="btn text-white" type="submit" style="background-color:#2E7D32;">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("access1").classList.add("active");
    function setUsername() {
        var fname = document.getElementById("adminFirstName").value;
        var lname = document.getElementById("adminLastname").value;
        document.getElementById("adminUsername").value = lname + fname.charAt(0);
    }
    (function () {
        'use strict'
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
//    document.getElementById("access1").classList.add("active");
</script>
<script>
    const input = document.querySelector("#phone");
    const input2 = document.querySelector("#phone1");
    const button = document.querySelector("#btn");
    const errorMsg = document.querySelector("#error-msg");
    const validMsg = document.querySelector("#valid-msg");
    const errorMap = ["Invalid number", "Invalid country code", "Too short", "Too long", "Invalid number"];
    // initialise plugin
    const iti = window.intlTelInput(input, {
        initialCountry: "us",
        utilsScript: "/intl-tel-input/js/utils.js?1706723638592"
    });
    const iti1 = window.intlTelInput(input2, {
        initialCountry: "us",
        utilsScript: "/intl-tel-input/js/utils.js?1706723638591"
    });
</script>