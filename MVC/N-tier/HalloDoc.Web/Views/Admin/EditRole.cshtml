@model HalloDocWebEntity.ViewModel.RoleModel
@{
    Layout = "_AdminHeader";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">Create Role</h4>

                <a class="text-start text-info text-decoration-none " href="javascript:void(0);" onclick="history.go(-1);">
                    <button class="btn btn-white  text-info border-info rounded ">
                        <i class="fa-solid  fa-less-than"></i> Back
                    </button>
                </a>
            </div>
            <div class="container rounded bg-white shadow py-3">

                <form asp-action="UpdateRole" asp-controller="Admin">
                    <input type="hidden" asp-for=@Model.RoleId value="@Model.RoleId" />
                    <div class="row">
                        <div class="col-12 h5 mb-3">
                            Details
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">
                            <input asp-for="RoleName" value="@Model.RoleName" type="text" class="form-control" id="RoleName" placeholder="Role Name" disabled>
                            <label for="exampleFormControlInput1" class="form-label ps-4">Role Name</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 col-md-6 col-xl-6">
                            <div class="mb-3 border border-light rounded-5">
                                <select class="form-select p-3 pla1" id="RoleSelect" asp-for="@Model.SelectedRole" aria-label="form-select-lg example" disabled>
                                    <option selected value="0">All</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Physician</option>
                                    <option value="3">Patient</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            @if (Model.menu != null)
                            {
                                @foreach (var item in Model.menu)
                                {
                                    @if (Model.rolemenus.Any(x => x.Menuid == item.Menuid))
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input checkboxes" type="checkbox" name="RoleIds" value="@item.Menuid" checked>
                                            <span class="form-check-label text6" for="inlineCheckbox1">@item.Name</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input checkboxes" type="checkbox" name="RoleIds" value="@item.Menuid">
                                            <span class="form-check-label text6" for="inlineCheckbox1">@item.Name</span>
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                            <button class="btn btn-info text-white me-md-2" type="submit">Save</button>
                            <a asp-action="AdminDashboardAccess"><button class="btn btn-white text-info border-info" type="button">Cancel</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("access1").classList.add("active");
</script>