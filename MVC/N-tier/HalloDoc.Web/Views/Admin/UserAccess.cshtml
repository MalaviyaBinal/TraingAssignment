@model HalloDocWebEntity.ViewModel.UserAccess
@{
    Layout = "_AdminHeader";
}
<div class="container p-0">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">User Access</h4>
            </div>
        </div>
    </div>
</div>
<div class="container hideonmobile bg-white rounded shadow mt-3 p-0">
    <div class="row pt-3 ps-2 pb-3">
        <div class="col-md-4 col-xl-4 col-lg-4 col-6" id="roleSelect"> 
            <select class="form-select">
                <option value="0">All</option>
                <option value="1">Admin</option>
                <option value="3">Physician</option>
            </select>
        </div>
    </div>
    
    <table class="table">
        <thead>
            <tr class="bg-light text-muted h-100">
                <th scope="col">Account type</th>
                <th scope="col">Account POC</th>
                <th scope="col">Phone</th>
                <th scope="col">Status</th>
                <th scope="col">Open Requests</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody class="text-muted">

            @foreach (var item in Model.Aspnetuser)
            {
                <tr>
                    <td>
                        @switch (item.Role)
                        {
                            case 1:
                                <span>Admin</span>
                                break;
                            case 3:
                                <span>Physician</span>
                                break;
                        }
                    </td>
                    <td>@item.Usarname </td>
                    <td>@item.Phonenumber</td>
                    <td>
                        @if (item.Admins.Count != 0)
                        {
                            @switch (item.Admins.FirstOrDefault().Status)
                            {
                                case 1:
                                    <span>Pending</span>

                                    break;
                                case 2:
                                    <span>
                                        Active
                                    </span>
                                    break;
                                case 3:
                                    <span>
                                        InActive
                                    </span>
                                    break;
                            }
                        }
                        else if (item.Physicians.Count != 0)
                        {
                            @switch (item.Physicians.FirstOrDefault().Status)
                            {
                                case 1:
                                    <span>Pending</span>

                                    break;
                                case 2:
                                    <span>
                                        Active
                                    </span>
                                    break;
                                case 3:
                                    <span>
                                        InActive
                                    </span>
                                    break;
                            }
                        }
                    </td>
                    <td>'numberofrequest' </td>
                    <td>
                        <a><button type="button" class="btn btn-outline-info">Edit</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    document.getElementById("access1").classList.add("active");
</script>