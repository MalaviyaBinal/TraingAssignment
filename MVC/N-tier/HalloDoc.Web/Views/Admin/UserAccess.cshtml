@model HalloDocWebEntity.ViewModel.UserAccess
@{
    Layout = "_AdminHeader";
}
<div class="container p-0">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">User Access</h4>
            </div>
        </div>
    </div>
</div>
<div class="container hideonmobile bg-white rounded shadow mt-3 p-0">
    <div class="row pt-3 ps-2 pb-3">
        <div class="col-md-4 col-xl-4 col-lg-4 col-6" > 
            <select class="form-select" id="roleSelect">
                <option value="0" selected>All</option>
                <option value="1">Admin</option>
                <option value="3">Physician</option>
            </select>
        </div>
    </div>
    <div id="TableContent">
    </div>
</div>
<script>
    document.getElementById("access1").classList.add("active");
    $(document).ready(function () {
        getTable();
    });
    $("#roleSelect").change(function(e){
       getTable();
    });
    function getTable(){
        var roleid = $('#roleSelect').val()
        $.ajax({
            url: "/Admin/GetUserAccessTable",
            data: { 'roleid': roleid },
            type: "POST",
            dataType: "html",
            success: function (result) {
                $("#TableContent").html(result);
            },
            error: function () {
                alert("No Projects Found");
            }
        });
    }
</script>