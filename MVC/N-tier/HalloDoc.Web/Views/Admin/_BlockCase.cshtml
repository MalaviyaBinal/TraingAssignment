ancelbtn").click(function () {        $("#modalpopup").remove();        $(".modal-backdrop").remove()        location.reload();    });    $('#blockform').submit(function (e) {        e.preventDefault();        var reasonid = $('#ReasonDropdown').val();        var notes = $('#notes').val();        var reqid = '@TempData["reqid"]';        $.ajax({            url: "/Admin/BlockConfirm",            data: { notes: notes, id: reqid },            type: "POST",            success: function (data) {                $("#modalpopup").remove();                $(".modal-backdrop").remove();                alert('Request Blocked successfully');                location.reload();                //window.onload(getLocation());            },            error: function () {                alert("No Projects Found");            }        });    });</script>