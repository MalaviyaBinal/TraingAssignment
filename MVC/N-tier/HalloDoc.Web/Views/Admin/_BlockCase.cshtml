@model HalloDocWebEntity.Data.Requestclient<div class="modal fade" id="blockCase" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content">            <div class="modal-header bg-info text-white">                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Block</h1>                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>            </div>            <form id="blockform" method="post">                <div class="modal-body">                    <div class="row mb-3">                        <div class="col text-muted">                            Patient Name: <span class="text-info">@Model.Firstname @Model.Lastname</span>                        </div>                    </div>                    <div class="row">                        <div class="col">                            <div class="form-floating">                                <textarea class="form-control needs-validation" placeholder="Leave a comment here" id="notes" style="height: 100px" required></textarea>                                <label for="floatingTextarea2">Reason for Block Request</label>                            </div>                        </div>                    </div>                </div>                <div class="modal-footer">                    <button type="submit" class="btn btn-info text-white">Confirm</button>                    <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>                </div>            </form>        </div>    </div></div><script>    $(document).ready(function () {        var myModal = new bootstrap.Modal(document.getElementById('blockCase'));        myModal.show();    });    $("#cancelbtn").click(function () {        $("#modalpopup").remove();        $(".modal-backdrop").remove()        location.reload();    });    $('#blockform').submit(function (e) {        e.preventDefault();        var reasonid = $('#ReasonDropdown').val();        var notes = $('#notes').val();        var reqid = '@TempData["reqid"]';        $.ajax({            url: "/Admin/BlockConfirm",            data: { notes: notes, id: reqid },            type: "POST",            success: function (data) {                $("#modalpopup").remove();                $(".modal-backdrop").remove();                alert('Request Blocked successfully');                location.reload();                //window.onload(getLocation());            },            error: function () {                alert("No Projects Found");            }        });    });</script>