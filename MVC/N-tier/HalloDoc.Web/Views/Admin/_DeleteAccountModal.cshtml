@model HalloDocWebEntity.ViewModel.DeleteAccountDetails

<div class="modal fade" id="delete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center justify-content-center mb-3">
                <div class="rounded-circle border border-3 p-1 border-warning shadow ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#e0bd34" class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                        <path fill="#e0bd34" d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path fill="#e0bd34" d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                    </svg>
                </div>
                <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
            </div>

            @switch (Model.accountTypeName)
            {
                case "Vender":
                    <div class="modal-body mb-3 " style="text-align: center;">
                        <div>
                            <h5 class="modal-title " id="staticBackdropLabel">Confirmation for Delete Account</h5>
                        </div>
                        Are sure you want to Delete This Account?Once clear this request then you are not able to see this Account.
                    </div>
                    <div class="modal-footer d-flex justify-content-center pb-3">
                        <a asp-action="DeleteVender" asp-controller="Admin" asp-route-id="@Model.venderID"><button type="button" class="btn btn-info text-white ">Yes Delete</button></a>

                        <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    break;
                case "AccessRole":
                    <div class="modal-body mb-3 " style="text-align: center;">
                        <div>
                            <h5 class="modal-title " id="staticBackdropLabel">Confirmation for Delete Role</h5>
                        </div>
                        Are sure you want to delete this Role? Once clear this request then you are not able to see this Role.
                    </div>
                    <div class="modal-footer d-flex justify-content-center pb-3">
                        <a asp-action="DeleteAccessRole" asp-controller="Admin" asp-route-id="@Model.roleId"><button type="button" class="btn btn-info text-white ">Yes Delete</button></a>

                        <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    break;
                case "Physician":
                    <div class="modal-body mb-3 " style="text-align: center;">
                        <div>
                            <h5 class="modal-title " id="staticBackdropLabel">Confirmation for Delete Account</h5>
                        </div>
                        Are sure you want to delete this Provider?Once clear this request then you are not able to see this Provider.
                    </div>
                    <div class="modal-footer d-flex justify-content-center pb-3">
                        <a asp-action="DeletePhysician" asp-controller="Admin" asp-route-id="@Model.PhyId"><button type="button" class="btn btn-info text-white ">Yes Delete</button></a>

                        <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    break;
                case "Unblock":
                    <div class="modal-body mb-3 " style="text-align: center;">
                        <div>
                            <h5 class="modal-title " id="staticBackdropLabel">Confirmation for Delete Request</h5>
                        </div>
                        Are sure you want to Unblock this Account?

                    </div>
                    <div class="modal-footer d-flex justify-content-center pb-3">
                        <a asp-action="UnblockRequest" asp-controller="Admin" asp-route-id="@Model.blockId"><button type="button" class="btn btn-info text-white ">Yes Unblock</button></a>

                        <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    break;
                case "Request":
                    <div class="modal-body mb-3 " style="text-align: center;">
                        <div>
                            <h5 class="modal-title " id="staticBackdropLabel">Confirmation for Delete Account</h5>
                        </div>
                        Are sure you want to Delete this Account Permanently?you Won't be able to access this account after deletion..

                    </div>
                    <div class="modal-footer d-flex justify-content-center pb-3">
                        <a asp-action="DeleteRequest" asp-controller="Admin" asp-route-id="@Model.reqId"><button type="button" class="btn btn-info text-white ">Yes Delete</button></a>

                        <button type="button" id="cancelbtn" class="btn btn-white text-info border-info" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    break;

            }

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var myModal = new bootstrap.Modal(document.getElementById('delete'));
        myModal.show();

    });
    $("#cancelbtn").click(function () {
        $("#modalpopup").remove();
        $(".modal-backdrop").remove()
        location.reload();
    });

</script>
