@model HalloDocWebEntity.ViewModel.PatientRecordModel

<style>
    th, td, tr {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    td, th {
        padding-left: 0.5rem;
    }
    .container{
        max-width: 90rem;
    }
</style>
<div class="table-responsive w-100">
    <table class="mt-3 border-0 w-100 mx-0 hideOnMobile" id="patientTable" style="--bs-gutter-x: 0rem;">
        <thead>
            <tr class=" border-bottom p-2 mx-0 py-2" scope="row" style=" background-color:lightgray; ">
                <th scope="col">
                    Client / Member
                </th>
                <th scope="col">
                    Created Date
                </th>
                <th scope="col">
                    Confirmation
                </th>
                <th scope="col">
                    Provider Name
                </th>
                <th scope="col">
                    Concluded Date
                </th>
                <th scope="col">
                    Status
                </th>
                <th scope="col">
                    Final Report
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.records)
            {
                <tr scope="row">
                    <td scope="col">
                        @item.Name
                    </td>
                    <td scope="col">
                        @item.createdDate
                    </td>
                    <td scope="col">
                        @item.conNo
                    </td>
                    <td scope="col">
                        @item.phyName
                    </td>
                    <td scope="col">
                        @item.concludeDate
                    </td>
                    <td scope="col">
                        @item.status
                    </td>
                    <td scope="col">
                        <a class="btn bg-transparent border-info text-info">View</a>
                    </td>
                    <td scope="col">
                        <a class="btn bg-transparent border-info text-info" data-bs-toggle="dropdown">Actions</a>
                        <ul class="dropdown-menu position-fixed" id="ActionsList">
                            <li><a class="dropdown-item btn" asp-action="ViewCase" asp-route-id="@item.rid" asp-controller="Admin">View Case</a></li>
                            <li><button type="button" class="dropdown-item btn">Chat</button></li>
                            <li><a class="dropdown-item btn" asp-action="AdminViewDocument" asp-controller="Admin" asp-route-id="@item.rid">(@item.docNo) Documents</a></li>
                        </ul>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-3">
        @if (Model.TotalPages >= 1)
        {
            <!-- Previous page -->
            <li class="page-item @(Model.PreviousPage ? " " : "disabled")">
                <a class="page-link" href="javascript:void(0)" onclick="getPatientRecords(@Model.CurrentPage-1)" aria-label="Previous">
                    <span aria-hidden="true"><i class="bi bi-caret-left-fill text-info"></i> </span>
                </a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : " ")">
                    <a class="page-link" id="plink-@i" href="javascript:void(0)" onclick="getPatientRecords(@i)">@i</a>
                </li>
            }

            <!-- Next page -->
            <li class="page-item @(Model.NextPage ? " " : "disabled")">
                <a class="page-link" href="javascript:void(0)" onclick="getPatientRecords(@Model.CurrentPage+1)" aria-label="Next">
                    <span aria-hidden="true"> <i class="bi bi-caret-right-fill text-info"></i> </span>
                </a>
            </li>
        }
    </ul>
</div>
