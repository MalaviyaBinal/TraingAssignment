@model HalloDocWebEntity.ViewModel.Profile
@{
    Layout = "_AfterLogin";
}



    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane container active" id="dashboard">
            <div class="container mx-0">
                <div class="row">
                    <div class="col-12">
                        <h5 class="mt-3">Medical History</h5>

                        <div class="container  rounded bg-white shadow py-3">
                            <div class="row justify-content-end text-end me-2 ">
                                <button class="theme-btn-header showOnMobile hide  mb-3" data-bs-toggle="modal" data-bs-target="#myModel">

                                    <i class="fa-solid fa-plus" style="color: #54B4D3;"></i>

                                </button>
                                <button class="theme-btn-header px-1  mb-3 hideOnMobile" style="height: 40px; width : 180px; color: #54B4D3;" data-bs-toggle="modal" data-bs-target="#myModel">Create New Request</button>

                            </div>
                            <table class="table hideOnMobile ">
                                <thead class="bg-light justify-content-center ">
                                    <tr>
                                     
                                        <th>
                                            Createddate
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th class="text-center">Document</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Request.ToList() )
                                    {
                                        <tr>
                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Createddate)
                                            </td>
                                        @switch (item.Status)
                                        {
                                            case 1:
                                                <td>
                                                    Unassigned
                                                </td>
                                                break;
                                            case 2:
                                                <td>
                                                    Accepted
                                                </td>
                                                break;
                                            case 5 or 4 :
                                                <td>
                                                    Processing
                                                </td>
                                                break;
                                            case 3:
                                                <td>
                                                    Cancelled by Admin
                                                </td>
                                                break;
                                            case 6:
                                                <td>
                                                    Concluded
                                                </td>
                                                break;
                                            case 7:
                                                <td>
                                                    Cancelled by Patient
                                                </td>
                                                break;
                                            case 8:
                                                <td>
                                                    Closed
                                                </td>
                                                break;
                                            case 9:
                                                <td>
                                                    Unpaid
                                                </td>
                                                break;
                                        }

                                            
                                            <td class="text-center">
                                            <a asp-action="PatientViewDocument" asp-controller="Home" asp-route-id="@item.Requestid"><button class="theme-btn-header px-1 " style="height: 40px; width : 100px; color: #54B4D3;">(@ViewBag.RequestIdCounts[item.Requestid])Document</button></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        <div class="accordion showOnMobile hide" style="background-color: #54d4d3;" id="accordionExample">

                            @foreach (var item in Model.Request.ToList())
                            {
                                string id = 'a' + item.Requestid.ToString();
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="@id">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@id-A" aria-expanded="false" aria-controls="@id-A">
                                            <i class="fa-regular fa-clock me-1" style="color: #54d4d3;"></i><b>Created Date: </b> @Html.DisplayFor(modelItem => item.Createddate)
                                        </button>
                                    </h2>
                                    <div id="@id-A" class="accordion-collapse collapse" aria-labelledby="@id" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <p><i class="fa-solid fa-user-doctor me-1 circlefa" style="color: #54d4d3; "></i>Provider : @id</p>
                                            <p>
                                                <i class="fa-solid fa-check circlefa me-1" style="color: #54d4d3;"></i>Current Status

                                                @switch (item.Status)
                                                {
                                                    case 1:
                                                        <span> Unassigned</span>

                                                        break;
                                                    case 2:
                                                        <span>
                                                            Accepted
                                                        </span>
                                                        break;
                                                    case 5 or 4:
                                                        <span>
                                                            Processing
                                                        </span>
                                                        break;
                                                    case 3:
                                                        <span>
                                                            Cancelled by Admin
                                                        </span>
                                                        break;
                                                    case 6:
                                                        <span>
                                                            Concluded
                                                        </span>
                                                        break;
                                                    case 7:
                                                        <span>
                                                            Cancelled by Patient
                                                        </span>
                                                        break;
                                                    case 8:
                                                        <span>
                                                            Closed
                                                        </span>
                                                        break;
                                                    case 9:
                                                        <span>
                                                            Unpaid
                                                        </span>
                                                        break;
                                                }


                                            <p class=""><a asp-action="PatientViewDocument" asp-controller="Home" asp-route-id="@item.Requestid"><button class="btn btn-white w-100" style="border-color: #54d4d3; color: #54d4d3;">(@ViewBag.RequestIdCounts[item.Requestid])Document</button></a></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        </div>



                    </div>
                </div>
            </div>

        </div>
       
      
        </div>

    
       <div class="modal fade" id="myModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-light" id="staticBackdropLabel">Create New Request</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-muted">Here, i want to create new request for....</h6>
                <div class="text-center">
                    <a asp-action="PatientDashboardRequestForMe" asp-controller="Home"><button type="button" class="btn btn-info text-light me-3">Me</button></a>
                    <a asp-action="PatientDashboardRequestForSomeone" asp-controller="Home"><button type="button" class="btn btn-outline-info">Some One Else</button></a>
                </div>
            </div>
            <div class="modal-footer">
                
                <button type="button" class="btn btn-outline-info">Continue</button>
                <button type="button" class="btn btn-info text-light" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
        </div>
    </div>

    <!--  -->
    <script>
    document.getElementById("dashbrd").classList.add("active");
        function changeTheme() {
            if ($('#light-theme').css('display') == 'none') {
                document.querySelector(".login-bg").style.display = "block";
                document.querySelector(".login-bg-dark").style.display = "none";
            }
            else {
                document.querySelector(".login-bg").style.display = "none";
                document.querySelector(".login-bg-dark").style.display = "block";
            }

        }
        function showSidebar() {
            document.querySelector(".sideBar").style.display = "flex";
        }
        function hideSidebar() {
            document.querySelector(".sideBar").style.display = "none";
        }
       
    
    </script>


