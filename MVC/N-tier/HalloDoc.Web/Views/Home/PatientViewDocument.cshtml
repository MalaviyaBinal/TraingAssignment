@model IEnumerable<HalloDocWebEntity.Data.Requestwisefile>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    Layout = "_AfterLogin";
}
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane container active" id="dashboard">
        <div class="container mx-0">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between">
                        <h4 class="mt-3">Documents</h4>
                        <a asp-action="PatientDashboard" asp-controller="Home"><button class="theme-btn-header px-1 mt-3 mb-3 " style="height: 40px; width : 80px; color: #54B4D3;">< Back</button></a>
                    </div>
                    <div class="container  rounded bg-white shadow py-3">
                        <h6 class="text-muted">Patient Name</h6>
                        <h4 style="color:#54d4d3;">@Accessor.HttpContext.Request.Cookies["userName"]</h4>
                        <h6 class="text-muted">Check here for any files that you or the doctors of your subsequents requestors have attached for you to review.</h6>
                        <div class="row">
                            <div class="row">
                                <div class="col">
                                    <form method="post" asp-action="UploadFile" enctype="multipart/form-data">
                                        <div class="form-group row">
                                            <div class="col">
                                                <p>
                                                    <button style="position:absolute;left:0; height:46px;width : 110px;" class="btn btn-info text-light text-start p-0">
                                                        <i class="fa-solid fa-cloud-arrow-up ms-2"
                                                           style="color: #ffffff; border-radius: 0px 5px 5px 0px; "></i><span class=" ms-2">Upload</span>
                                                    </button>
                                                    <input type="File" class="form-control input-placeholder " name="fileToUpload" id="fileToUpload"
                                                           placeholder="Select File">
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h4 class="mt-3">Documents</h4>
                                <button class="theme-btn-header px-1 showOnMobile hide " onclick="downloadFile()"><i class="fa-solid fa-cloud-arrow-down" style="color: #54B4D3;"></i></button>
                                <button class="theme-btn-header px-1 mt-3 mb-3 hideOnMobile" onclick="downloadFile()" style="height: 40px; width : 150px; color: #54B4D3;">Download All</button>
                            </div>
                            <table class="table hideOnMobile ">
                                <thead class="bg-light justify-content-center ">
                                    <tr>
                                        <th>
                                            <input type="checkbox" id="checkall" onclick="oncheck()" class="ms-3" />
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Filename)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Createddate)
                                        </th>
                                        <th class="text-center"> Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox" class="Subcheckbox checkboxes ms-3" data-filename="@item.Filename" /></td>
                                            <td>
                                                <i class="fa-solid fa-file-pdf" style="color: #ff0000;"></i>
                                                @Html.DisplayFor(modelItem => item.Filename)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Createddate)
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="DownloadFile" asp-controller="Home" asp-route-id="@item.Requestwisefileid"><button class="theme-btn-header px-1 "><i class="fa-solid fa-cloud-arrow-down" style="color: #54B4D3;"></i></button></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="showOnMobile hide">

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="d-flex mb-3">
                                                    <input type="checkbox" class="Subcheckbox checkboxes me-2" data-filename="@item.Filename" />

                                                    <i class="fa-solid fa-file-pdf" style="color: #ff0000;"></i>
                                                    <div><small class="ms-2 me-2 text-muted">@Html.DisplayFor(modelItem => item.Filename)</small></div>
                                                </div>
                                                <small class="text-muted mb-2"> @Html.DisplayFor(modelItem => item.Createddate)</small>
                                                <a asp-action="DownloadFile" asp-controller="Home" asp-route-id="@item.Requestwisefileid"><button class="theme-btn-header px-1 "><i class="fa-solid fa-cloud-arrow-down" style="color: #54B4D3;"></i></button></a>
                                            </div>
                                    </tr>
                                    <hr />
                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <script>
        function oncheck() {
            var check = document.getElementById('checkall').checked;
            if (check) {
                var len = document.getElementsByClassName('checkboxes');
                for (var i = 0; i < len.length; i++) {
                    len[i].checked = true;
                }
            } else {
                var len = document.getElementsByClassName('checkboxes');
                for (var i = 0; i < len.length; i++) {
                    len[i].checked = false;
                }
            }
        }

        function downloadFile() {

            var checkboxes = document.querySelectorAll('.Subcheckbox:checked');
            var filenames = [];
            checkboxes.forEach(function (checkbox) {
                filenames.push(checkbox.getAttribute('data-filename'));
            });
            if (filenames.length > 0) {
                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/Home/DownloadAll/', true);
                xhr.setRequestHeader('Content-Type', 'application/json');
                xhr.responseType = 'blob';
                xhr.onload = function () {
                    if (this.status === 200) {
                        var blob = new Blob([this.response], { type: 'application/octet-stream' });
                        var link = document.createElement('a');
                        link.href = window.URL.createObjectURL(blob);
                        link.download = 'selected_files.zip';
                        link.click();
                    }
                };
                xhr.send(JSON.stringify(filenames));
            } else {
                alert('Please select one or more files to download.');
            }
        }


        function showSidebar() {
            document.querySelector(".sideBar").style.display = "flex";
        }
        function hideSidebar() {
            document.querySelector(".sideBar").style.display = "none";
        }
        function showHidePassword() {
            let temp = document.getElementById("inputPassword");
            if (temp.type === "password") {
                temp.type = "text";
            }
            else {
                temp.type = "password";
            }
        }
    </script>
    <script>
        document.getElementById("dashbrd").classList.add("active");
    </script>



