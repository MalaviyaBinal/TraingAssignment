@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/style-patient.css">
</head>

<body style="background-color: rgb(248, 248, 248);">
    <!-- --------------------------------------Main container--------------------------------------------- -->
    <header id="myHeader" class="px-3 Submit-request-header">

        <img class="logo-icon " src="~/images/lobgin-logo.png" alt="logo">
        <button class="theme-btn " onclick="changeTheme()">
            <i class="fa-regular fa-moon fa-lg"></i>
        </button>
    </header>
    <div class="container d-flex justify-content-center pt-5 min-vh-100 ">


        <div class="row mt-5 ">
            <div class="col-12">
                <div class="row">
                    <div class="col text-end">
                        <h5>I am a....</h5>

                    </div>
                    <div class="col text-end">
                        <form>
                            <button type="submit" class="text-info bg-transparent border-info px-2 py-1 btn" asp-action="Index" asp-controller="Home">
                                < Back
                            </button>
                        </form>
                    </div>


                </div>
                <div class="d-flex flex-column">
                  
                        <button type="button" class=" mb-3 mt-4 px-5 py-3 ms-5 me-5"
                                style="  background-color:  rgb(231, 231, 255); border-color: rgb(193, 193, 218);">
                            <strong><a asp-action="RequestPatient" asp-controller="Home" class="w-100 h-100" style="text-decoration: none; color:rgb(85, 85, 202);">PATIENT</a> </strong>
                        </button>
                  
                    <button type="submit" class=" text-info  mb-3  px-5 py-3 ms-5 me-5"
                            style="background-color: rgb(220, 243, 250); border-color: rgb(149, 211, 231);">
                        <strong><a asp-action="RequestFrdFamily" asp-controller="Home" class="text-info" style="text-decoration: none;"> FAMILY / FRIEND</a></strong>
                    </button>
                    <button type="submit" class="  text-success  mb-3  px-5 py-3 ms-5 me-5"
                            style="background-color: rgb(197, 240, 197); border-color: rgb(157, 235, 157);">
                        <strong><a asp-action="RequestConcierge" asp-controller="Home" class="text-success" style="text-decoration: none;">CONCIERGE</a> </strong>
                    </button>
                    <button type="submit" class=" mb-3 px-4 py-3 ms-5 me-5"
                            style="  border-color: #FFD0E9;background-color:  #FFE6F3">
                        <b><a asp-action="RequestBusiness" asp-controller="Home" style="text-decoration: none;color: #FF339C;">BUSINESS PARTNERS</a></b>
                    </button>
                </div>

                <footer class="text-center  footer-bottom">
                    <span class="text-center">Terms and Conditions | Privacy Policy</span>
                </footer>
            </div>
        </div>

    </div>
    <script>
        let c = 1;
        function changeTheme() {

            if (c % 2 === 0) {
                document.body.style.backgroundColor = "#F8F8F8";
                document.getElementById("myHeader").style.backgroundColor = "white";
                c++;
            }
            else {
                c++;
                document.querySelector(".theme-btn").style.backgroundColor = "white";

                document.getElementById("myHeader").style.backgroundColor = "#757171";
            }

            // if ($('#light-theme').css('display') == 'none') {
            //     document.querySelector(".login-bg").style.display = "block";
            //     document.querySelector(".login-bg-dark").style.display = "none";
            // }
            // else {
            //     document.querySelector(".login-bg").style.display = "none";
            //     document.querySelector(".login-bg-dark").style.display = "block";
            // }

        }
    </script>

</body>


</html>
