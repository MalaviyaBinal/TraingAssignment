@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/style-patient.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</head>
<body data-bs-theme="dark">
    <!-- --------------------------------------Main container--------------------------------------------- -->
    <nav class="" data-bs-theme="dark">
        <ul class="sideBar shadow ">
            <li>
                <a class="text-decoration-none" asp-controller="Provider" asp-action="ProviderDashboard">Dashboard</a>
            </li>
            <li>
                <a class="text-decoration-none" >Invoicing</a>
            </li>
            <li>
                <a class="text-decoration-none" >MySchedule</a>
            </li>
            <li>
                <a class="text-decoration-none" >My Profile</a>
            </li>
        </ul>
        <ul style="margin-bottom: 0px !important;">
            <li class="d-flex">
                <button class="theme-btn-header  mt-3 showOnMobile" style="display:none" onclick="showSidebar()">
                    <i class="fa-solid fa-bars" style="color: #54B4D3;"></i>
                </button>
                <div>
                    <img class="logo-icon mb-5 " src="~/images/lobgin-logo.png" alt="logo">
                </div>
            </li>
            <li class="hideOnMobile">
                <p class="p-3 m-2 ">Wellcome : <b><small>@Accessor.HttpContext.Request.Cookies["userName"]</small></b></p>
            </li>
            <li>
                <button class="btn btn-outline-info mt-3 hideOnMobile"><a asp-controller="Admin" asp-action="Logout" style="text-decoration: none; color: #54B4D3;">Logout</a></button>
            </li>
            <li>
                <button class="theme-btn-header showOnMobile hide mt-3">
                    <a asp-controller="Home" asp-action="PatientLogin"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #54B4D3;"></i></a>
                </button>
            </li>
            <li>
                <button class="theme-btn-header mt-3" onclick="changeTheme()">
                    <i class="fa-regular fa-moon fa-lg"></i>
                </button>
            </li>
        </ul>
    </nav>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs tabs  shadow hideOnMobile">
        <li class="nav-item">
            <a class="nav-link " asp-action="ProviderDashboard" asp-controller="Provider" id="dashbrd" style="cursor : pointer;">Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Invoicing" asp-controller="Provider" id="invoicing">Invoicing</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="MySchedule" asp-controller="Provider" id="mySchedule" style="cursor :pointer;">My Schedule</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="MyProfile" asp-controller="Provider" id="myProfile" style="cursor :pointer;">My Profile</a>
        </li>
    </ul>
    <main id="content" role="main" class="pb-3">
        @RenderBody()
    </main>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        var check;
        var id;
        var searchValue;
        var searchRegion;
        function showSidebar() {
            if (document.querySelector(".sideBar").style.display == "flex") {
                document.querySelector(".sideBar").style.display = "none"
                document.documentElement.setAttribute('data-bs-theme', 'light')
            }else {
                document.documentElement.setAttribute('data-bs-theme', 'dark')
                document.querySelector(".sideBar").style.display = "flex";
            }
        }
        function hideSidebar() {
            document.querySelector(".sideBar").style.display = "none";
        }
    </script>
</body>
</html>
